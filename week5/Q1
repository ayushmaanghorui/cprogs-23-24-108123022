#include<stdio.h>
int main()
{
	int i,n,max,min,sum=0;
	printf("Enter n : ");
	scanf("%d",&n);
	printf("Enter elements: ");
	int a[n];
	for(i=0;i<n;i++)
	{
		scanf("%d",&a[i]);
	}
	max=a[0];
	for(i=0;i<n;i++)
	{
		if(a[i]>max)
		{
			max=a[i];
		}
	}
		min=a[0];
	for(i=0;i<n;i++)
	{
		if(a[i]<min)
		{
			min=a[i];
		}
	}
	for(i=0;i<n;i++)
	{
		sum+=a[i];
	}
	printf("Max is %d\n",max);
	printf("Min is %d\n",min);
	printf("Avg is %d\n",sum/n);
}
